
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/list.css">
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous"
  />
    <title>Document</title>
     <style>
        .gunjan {
            display: flex;
            justify-content: center;
        }
        
        /* Responsive Styles for Laptops */
        @media (max-width: 1024px) {
            .gunjan {
                justify-content: flex-start;
            }
        }
        
        /* Responsive Styles for Mobile Devices */
         @media (max-width: 767px) {
            .gunjan {
                flex-direction: column;
                align-items: center;
            }
        } 
        
    </style> 
</head>
<body>
    <%- include('./layouts/_collegeHeader') %> 
 

   <h4 style="padding-left:600px; padding-top: 20px;">Job-Application</h4>

    <form action="" class="mx-auto " class="gunjan">
        
        <input type="text"placeholder="search company,name,email." name="search" >
        <input type="submit" value="search">
    </form>


    <table class="styled-table">

        
  
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>resume</th>
                <th>company</th>
                <th>job-post</th>
                <th>Controls</th>
            </tr>
        </thead>
       
        <tbody>
            <% application.forEach((application)=>{%>
            <tr>
                <td><%- application.name %></td>
                <td><%- application.email %></td>
               
                <td><div class="container">
                    <div class="image-container">
                        <div class="image"> <img src="resume/<%= application.resume%>" width="50px" height="50px" alt="<%- application.resume%>"></div>
                    </div>
                    <div class="popup-image" style="position: fixed; top: 0;left: 0;background: rgba(0,0,0,.9); width: 100%; height: 100%; z-index: 100;display: none;">

                        <span style="position: absolute;top: 0;right: 10px;font-size: 60px;font-weight: bolder;color:#fff; cursor: pointer; z-index: 100;">&times;</span>
                        <img style="position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%); border: 5px solid #fff;border-radius: 5px;width: 300px; object-fit: cover;" src="resume/<%= application.resume%>" alt="">
                    </div>

                </div>
                   
                </td>
                <td><%- application.company %></td>
                <td><%- application.jobPost %></td>

             
                
    
                <td>
                    
                    <!-- <a href="/student/removeApplication"><span>Delete</span></a> -->
                    <a href="/student/removeApplication?id=<%= application._id %>"><span>Delete</span></a>
                    
                </td>
            </tr>
            <%} ) %>
        </tbody>
        
    </table>
    
    <script>
        document.querySelectorAll('.image-container img').forEach(image =>{
            image.onclick = ()=>{
                document.querySelector('.popup-image').style.display = 'block';
                document.querySelector('.popup-image img').src =image.getAttribute('src')
            }
        });
        document.querySelector('.popup-image span').onclick = () =>{

            document.querySelector('.popup-image').style.display = 'none';
        }
    </script>
</body>
</html>
